  "lint-staged": {
    "*.{js,ts}": "npm run eslint",
    "*.{css,less,scss}": "npm run stylelint",
    "*.md": "npm run markdownlint",
    "*": "npm run prettier"
  },
  "devDependencies": {
    "@prettier/plugin-xml": "^2.2.0",
    "eslint": "^8.28.0",
    "eslint-config-airbnb-base": "^15.0.0",
